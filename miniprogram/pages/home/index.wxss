/* miniprogram/pages/home/index.wxss */
.container {
  padding-bottom: env(safe-area-inset-bottom);
  padding-top: 70rpx;
}

.search-bar {
  background-color: #fff;
  position: relative;
  padding: 0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  z-index: 90;

}

.icon-search {
  font-size: inherit;
}

.icon-search {
  width: 44rpx;
  height: 44rpx;
}

.search-bar-input {
  width: 100%;
  height: 70rpx;
}

.product-list {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%;

}

.product-item {
  width: 345rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.product-item:nth-child(2n-1) {
  margin-right: 20rpx;

}

.product-image {

  height: 345rpx;
}

.product-text {
  padding: 10rpx;
}

.product-title {
  color: #222;
  font-size: 32rpx;
}

.product-time {
  color: #999;
  font-size: 24rpx;
}