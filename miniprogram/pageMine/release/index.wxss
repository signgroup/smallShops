/* miniprogram/pageMine/release/index.wxss */
.container {
     padding-top: 20rpx;
}

.list-cell {
     width: 100%;
     padding-left: 20rpx;
     background-color: #fff;
}

.line-cell {
     display: flex;
     background: #fff;
     font-size: 32rpx;
     color: #333;
     padding: 20rpx 30rpx;
     width: 100%;
     border-bottom: 1px solid #eee;
}

.cell-title {
     width: 4em;
     text-align: right;
}

.cell-input {
     padding-left: 20rpx;
     flex: 1;
}

.mes-cell {
     width: 100%;
     border-radius: 20rpx;
     background: #fff;
}

.mes-textarea {
     width: 100%;
}

.text-num {
     text-align: right;
     display: block;
     color: #999;
     padding-right: 30rpx;
}

.image-box {
     display: flex;
     align-items: center;
     justify-content: center;
     width: 230rpx;
     height: 230rpx;
     border: 1px solid #eee;
     position: relative;
     box-sizing: border-box;
}


.image-box image {
     width: 100%;
     height: 100%;
}

.image-box  .icon-add{
     width: 50%;
     height: 50%;
}

.add-box {
     flex-direction: column;
}

.flex-button {
     position: fixed;
     bottom: 0;
     left: 0;
     width: 100%;
     padding: 20rpx;
     background-color: #fff;
     display: flex;
}

.flex-button button {
     line-height: 80rpx;
}

.flex-button button:nth-child(1) {
     margin-right: 20rpx;
}

.tip{
     background-color: #fff;
     margin-top: 20rpx;
     padding: 20rpx;
     font-size:small;
     color: #666;
}