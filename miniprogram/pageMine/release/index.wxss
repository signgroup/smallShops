/* miniprogram/pageMine/release/index.wxss */
.container {
     padding-top: 20rpx;
}

.list-cell {
     width: 100%;
     padding-left: 20rpx;
     background-color: #fff;
}

.line-cell {
     display: flex;
     background: #fff;
     font-size: 32rpx;
     color: #333;
     padding: 20rpx 30rpx;
     width: 100%;
     border-bottom: 1px solid #eee;
}

.cell-title {
     width: 4em;
     text-align: right;
}

.cell-input {
     padding-left: 20rpx;
     flex: 1;
}

.mes-cell {
     width: 100%;
     border-radius: 20rpx;
     background: #fff;
}

.mes-textarea {
     width: 100%;
}

.text-num {
     text-align: right;
     display: block;
     color: #999;
     padding-right: 30rpx;
}

.image-box {
     display: flex;
     align-items: center;
     justify-content: center;
     width: 230rpx;
     height: 230rpx;
     border: 1px solid #eee;
     position: relative;
     box-sizing: border-box;
}


.image-box image {
     width: 100%;
     height: 100%;
}

.image-box .icon-add {
     width: 50%;
     height: 50%;
}

.add-box {
     flex-direction: column;
}

.flex-button {
     position: fixed;
     bottom: 0;
     left: 0;
     width: 100%;
     padding: 20rpx;
     background-color: #fff;
     display: flex;
}

.flex-button button {
     line-height: 80rpx;
}

.flex-button button:nth-child(1) {
     margin-right: 20rpx;
}

.tip {
     background-color: #fff;
     margin-top: 20rpx;
     padding: 20rpx;
     font-size: small;
     color: #666;
}

.guide {
     width: 100%;
     text-align: right;
     padding: 20rpx;
}

.guide text {
     color: #999;
}

.modal-mask {
     position: fixed;
     width: 100%;
     height: 100%;
     top: 0;
     left: 0;
     right: 0;
     bottom: 0;
     background: rgba(0, 0, 0, 0.6);
     z-index: 9999996;
     transition: all 0.3s ease-in-out;
     opacity: 0;
     visibility: hidden;
}

.modal-box {
     position: fixed;
     left: 50%;
     top: 50%;
     margin: auto;
     background: #fff;
     z-index: 9999998;
     transition: all 0.3s ease-in-out;
     opacity: 0;
     visibility: hidden;
     box-sizing: border-box;
     width: 84%;
     padding: 40rpx;
     border-radius: 12px
}

.modal-normal {
     transform: translate(-50%, -50%) scale(1);
}

.modal-show {
     opacity: 1;
     visibility: visible;
}

.modal-content {
     font-size: 26rpx;
}

.modal-content view {
     margin-bottom: 20rpx;
}

.preview {
     width: 120rpx;
     height: 100%;
     text-align: center;
}